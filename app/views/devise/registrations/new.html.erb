<% content_for :content do %>
  <div class="auth-wrapper">
    <div class="card">
              <a href="/" ><h2><%= @site_title %></h2></a>
              <header >Sign up</header>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="form-group">
                  <%= f.text_field :first_name, required: true, class: "form-control input" %>
                  <%= f.label :first_name %>
                </div>

                <div class="form-group">
                  <%= f.text_field :last_name, required: true, class: "form-control input" %>
                  <%= f.label :last_name %>
                </div>

                <div class="form-group">
                  <%= f.email_field :email, required: true, class: "form-control input" %>
                  <%= f.label :email %>
                </div>

                <div class="form-group">
                  <%# if @minimum_password_length %>
                  <!--          <em>(<%#= @minimum_password_length %> characters minimum)</em>-->
                  <%# end %>
                  <%= f.password_field :password, required: true, class: "form-control input" %>
                  <%= f.label :password, value: "Password (> #{@minimum_password_length} characters)" %>
                </div>

                <div class="form-group">
                  <%= f.password_field :password_confirmation, required: true, class: "form-control input" %>
                  <%= f.label :password_confirmation, value: "Confirm Password" %>
                </div>

                <div class="form-group">
                  <%= f.submit "SIGN UP", class: "button" %>
                </div>
              <% end %>

              <%= render "devise/shared/links" %>
    </div>
  </div>

<% end %>