<% flash.each do |key, value| %>
  <div class="mt-3">
    <div class="custom-alert <%= key == 'notice' ? 'custom-alert-primary' : 'custom-alert-warning' %> alert-dismissible fade show" role="alert">
      <strong></strong> <%= value %>
      <button type="button" class="custom-btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% end %>
